<h1>New Wiki</h1>
<%= form_for [@wiki] do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <% if current_user.admin? || current_user.premium? %>
    <div class="field">
      <%= f.label :private %><br>
      <%= f.check_box :private %> Private wiki
    </div>
    <div class="field">
      <%= f.label "Add a collaborator" %><br>
      <%= f.email_field :col_email, placeholder: "User name (email)" %>
    </div>
  <%end%>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end%>

<%= link_to 'Back', wikis_path %>
